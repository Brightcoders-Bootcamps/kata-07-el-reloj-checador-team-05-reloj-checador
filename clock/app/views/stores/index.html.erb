<p id="notice"><%= notice %></p>

<h1>Stores</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Open time</th>
      <th>Close time</th>
      <th>Status</th>
      <th colspan="3">Accions</th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.address %></td>
        <td><%= store.phone %></td>
        <td><%= store.open_time %></td>
        <td><%= store.close_time %></td>
        <td><%= store.status %></td>
        <td><%= link_to 'Show', store , class: 'btn btn-primary'%></td>
        <td><%= link_to 'Edit', edit_store_path(store) , class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Store', new_store_path , class: 'btn btn-success'%>
