<div class="error">
  <div class="alert alert-danger alert-dismissible" id="store-errors">
    <button type="button" class="close">&times;</button>
    <strong>Danger!</strong> 
    <% if store.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

          <ul>
            <% store.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <div class="row">
        <div class="col-sm-12">
          <img src="https://picsum.photos/200/200" class="img-thumbnail" />
        </div>
        <div class="col-sm-12">
        <!-- segmento para el mapa--> 
        </div>
      </div>
    </div>
    <div class="col-sm-10">
    <%= form_with(model: store, local: true, class: "form-horizontal") do |form| %>
            
      <div class="form-group row">
        <%= form.label :name, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :name, placeholder: "Store Name", :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :address, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.text_field :address, placeholder: "Address Name # 101, Colima", :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :phone, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
        <%= form.text_field :phone, placeholder: "+52 (312) 000 0000", :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :open_time, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.time_select :open_time, :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <%= form.label :close_time, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.time_select :close_time, :class => "form-control" %>
        </div>
      </div>
    
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

</div>