<%= form_for :session, url: session_path, class: "form-signin" do |form| %>
  <div class="text-field">
    <%= form.label :email, class: "col-form-label" %>
    <%= form.text_field :email, type: 'email', class: "form-control" %>
  </div>

  <div class="password-field">
    <%= form.label :password, class: "col-form-label" %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="submit-field">
    <%= form.submit class: "btn btn-info" %>
    <%= link_to t(".forgot_password"), new_password_path, class: "btn btn-danger" %>
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path, class: "btn btn-secondary" %>
    <% end %>
  </div>
<% end %>
