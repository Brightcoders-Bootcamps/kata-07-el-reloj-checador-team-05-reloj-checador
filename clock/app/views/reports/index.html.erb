<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Employee</th>
      <th scope="col">Date</th>
      <th scope="col">Hour start</th>
      <th scope="col">Hour finish</th>
      <th scope="col">Work day</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td scope="row"><%= Employee.find(report.employee_id).name %></td>
        <td><%= report.date %></td>
        <td><%= report.hour_start.strftime("%I:%M %p")  %></td>
        <td><%= report.hour_finish.strftime("%I:%M %p")  %></td>
        <td><%= report.work_day %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

