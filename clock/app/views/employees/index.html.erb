<div class="container">
  <div class="row">
      <% @employees.each do |employee| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          <img src="https://picsum.photos/200/200" class="img-thumbnail" />
            <div class="card-body">
              <p class="card-text">
                <p><strong>Name:</strong> <%= employee.name %></p>
                <p><strong>Employee number:</strong> <%= employee.id %></p>
              </p>
              <div class="d-flex justify-content-between align-items-center">
                <%= link_to 'Show', edit_employee_path(employee), class: 'btn btn-primary btn-lg btn-block' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
